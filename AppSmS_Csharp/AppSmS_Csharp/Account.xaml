            <Label Text="Coordonées personelles" 
                   TextColor="Black" 
                   FontSize="34" 
                   FontAttributes="Bold" 
                   FontFamily="cursive"
                   HorizontalOptions="Center"/>
            <StackLayout Orientation="Horizontal" Margin="20">
                <Label Text="Username : " TextColor="Gray" FontSize="17"/>
                <Label Text="elvis20" TextColor="Black" FontSize="20" FontAttributes="Bold"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal" Margin="20">
                <Label Text="Email : " TextColor="Gray" FontSize="17"/>
                <Label Text="elvisahoua@gmail.com" TextColor="Black" FontSize="20" FontAttributes="Bold"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal" Margin="20">
                <Label Text="Phone : " TextColor="Gray" FontSize="17"/>
                <Label Text="68466745" TextColor="Black" FontSize="20" FontAttributes="Bold"/>
            </StackLayout>
            <Label Text="Bienvenue a l'equipe C#" HorizontalOptions="Center" TextColor="#242c39" FontSize="25" VerticalOptions="EndAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>